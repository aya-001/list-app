<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>LIST</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/send_url.js"></script>
  </head>
  <body>
    <header>
      <a class="header-logo" href="/">LIST</a>
    </header>
    <div class="container">
      <div class="container-header">
        <h1>Shopping List</h1>
        <a href="/new" class="new-button">+Add item</a>
      </div>
      <div class="index-table-wrapper">
        <div class="table-head">
          <span class="id-column">ID</span>
          <span>Item</span>
        </div>
        

        <ul class="table-body">
          <% ShoppingList.forEach((ShoppingList) => { %>
         
          <li>
            <div class = "item-data">
              <span class="id-column"><%= ShoppingList.id %></span>
              <span class="name-column"><%= ShoppingList.name %></span>
            </div>
            
          <div class ="item-menu">
            <form action= "/delete/<%= ShoppingList.id %>" method ="post">
              <input type = "submit" value ="Delete">
            </form>
             
          </div>
 
          </li>
        <% }); %>
        </ul>
      </div>
    </div>
  </body>
</html>